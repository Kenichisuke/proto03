<h2>Precheck</h2>


<% if signed_in? && @results.any? %>
  <table class="table table-bordered table-condensed" >
    <tr>
      <th style="text-align:center;">coin</th>
      <th style="text-align:center;">init bal</th>
      <th style="text-align:center;">db bal</th>
      <th style="text-align:center;">db diff bal</th>
      <th style="text-align:center;">db locked bal</th>        
      <th style="text-align:center;">wallet status</th>
      <th style="text-align:center;">Wallet bal</th>
    </tr>
    <% @results.each do | r | %>
      <tr>
         <td style="text-align:center;"><%= r.ticker %></td>
         <td style="text-align:center;"><%= r.init_bal %></td>
         <td style="text-align:center;"><%= r.db_bal %></td>
         <td style="text-align:center;"><%= r.db_diff_bal %></td>
         <td style="text-align:center;"><%= r.db_locked_bal %></td>
         <td style="text-align:center;"><%= r.status %></td>
         <td style="text-align:center;"><%= r.wallet_bal %></td>   
      </tr>
    <% end %>      
  </table>
<% end %>
